<Application
    x:Class="RomanticStudio.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
                <ResourceDictionary Source="Styles/AppTheme.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            
            <!-- Persian Fonts -->
            <FontFamily x:Key="PersianFont">Assets/Fonts/IRANSansX-Regular.ttf#IRANSansX</FontFamily>
            <FontFamily x:Key="PersianFontBold">Assets/Fonts/IRANSansX-Bold.ttf#IRANSansX</FontFamily>
        </ResourceDictionary>
    </Application.Resources>
</Application>
