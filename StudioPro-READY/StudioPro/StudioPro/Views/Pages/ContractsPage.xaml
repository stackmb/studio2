<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="StudioPro.Views.Pages.ContractsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Background="{ThemeResource LayerFillColorDefaultBrush}">

    <ScrollViewer>
        <StackPanel Padding="40,20" MaxWidth="900" HorizontalAlignment="Center">
            
            <!-- Header -->
            <TextBlock Text="قرارداد جدید" 
                      FontSize="32" 
                      FontWeight="Bold" 
                      Margin="0,0,0,30"
                      HorizontalAlignment="Right"
                      Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"/>

            <!-- اطلاعات داماد و عروس -->
            <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="20"
                    Margin="0,0,0,16">
                
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- ردیف 1: نام داماد - تلفن داماد -->
                    <StackPanel Grid.Row="0" Grid.Column="2" Margin="0,0,0,12">
                        <TextBlock Text="نام داماد" FontSize="14" Margin="0,0,0,4"/>
                        <TextBox x:Name="GroomNameBox" 
                                PlaceholderText="نام و نام خانوادگی داماد"
                                Height="40"/>
                    </StackPanel>

                    <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,0,12">
                        <TextBlock Text="شماره تلفن داماد" FontSize="14" Margin="0,0,0,4"/>
                        <TextBox x:Name="GroomPhoneBox" 
                                PlaceholderText="09121234567"
                                Height="40"/>
                    </StackPanel>

                    <!-- ردیف 2: نام عروس - تلفن عروس -->
                    <StackPanel Grid.Row="1" Grid.Column="2" Margin="0,0,0,12">
                        <TextBlock Text="نام عروس" FontSize="14" Margin="0,0,0,4"/>
                        <TextBox x:Name="BrideNameBox" 
                                PlaceholderText="نام و نام خانوادگی عروس"
                                Height="40"/>
                    </StackPanel>

                    <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,0,12">
                        <TextBlock Text="شماره تلفن عروس" FontSize="14" Margin="0,0,0,4"/>
                        <TextBox x:Name="BridePhoneBox" 
                                PlaceholderText="09121234567"
                                Height="40"/>
                    </StackPanel>

                    <!-- ردیف 3: کد ملی - تاریخ عقد قرارداد -->
                    <StackPanel Grid.Row="2" Grid.Column="2" Margin="0,0,0,12">
                        <TextBlock Text="کد ملی" FontSize="14" Margin="0,0,0,4"/>
                        <TextBox x:Name="NationalIdBox" 
                                PlaceholderText="0123456789"
                                Height="40"
                                MaxLength="10"/>
                    </StackPanel>

                    <StackPanel Grid.Row="2" Grid.Column="0" Margin="0,0,0,12">
                        <TextBlock Text="تاریخ عقد قرارداد" FontSize="14" Margin="0,0,0,4"/>
                        <CalendarDatePicker x:Name="ContractDatePicker" 
                                           PlaceholderText="انتخاب تاریخ"
                                           Height="40"
                                           HorizontalAlignment="Stretch"/>
                    </StackPanel>

                    <!-- ردیف 4: تاریخ رزرو -->
                    <StackPanel Grid.Row="3" Grid.Column="2" Grid.ColumnSpan="3">
                        <TextBlock Text="تاریخ رزرو (مراسم)" FontSize="14" Margin="0,0,0,4"/>
                        <CalendarDatePicker x:Name="EventDatePicker" 
                                           PlaceholderText="انتخاب تاریخ مراسم"
                                           Height="40"
                                           HorizontalAlignment="Stretch"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- آدرس -->
            <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="20"
                    Margin="0,0,0,16">
                <StackPanel>
                    <TextBlock Text="آدرس مشتری" FontSize="14" Margin="0,0,0,4"/>
                    <TextBox x:Name="AddressBox" 
                            PlaceholderText="آدرس کامل"
                            Height="40"/>
                </StackPanel>
            </Border>

            <!-- توضیحات -->
            <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="20"
                    Margin="0,0,0,16">
                <StackPanel>
                    <TextBlock Text="توضیحات" FontSize="14" Margin="0,0,0,4"/>
                    <TextBox x:Name="DescriptionBox" 
                            PlaceholderText="توضیحات قرارداد..."
                            Height="80"
                            AcceptsReturn="True"
                            TextWrapping="Wrap"/>
                </StackPanel>
            </Border>

            <!-- هدیه -->
            <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="20"
                    Margin="0,0,0,16">
                <StackPanel>
                    <TextBlock Text="هدیه یا اشانتیون" FontSize="14" Margin="0,0,0,4"/>
                    <TextBox x:Name="GiftBox" 
                            PlaceholderText="توضیحات هدیه..."
                            Height="40"/>
                </StackPanel>
            </Border>

            <!-- خدمات -->
            <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="20"
                    Margin="0,0,0,16">
                <StackPanel>
                    <TextBlock Text="خدمات اصلی" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,12"/>
                    <ListView x:Name="ServicesListView" SelectionMode="None">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Grid Padding="8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="150"/>
                                    </Grid.ColumnDefinitions>
                                    <CheckBox Content="{Binding Label}" 
                                             IsChecked="{Binding IsSelected, Mode=TwoWay}"
                                             Checked="Service_CheckChanged"
                                             Unchecked="Service_CheckChanged"/>
                                    <TextBlock Text="{Binding PriceFormatted}" 
                                              Grid.Column="1"
                                              Foreground="#2196F3"
                                              FontWeight="SemiBold"/>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </StackPanel>
            </Border>

            <!-- سفارش چاپ -->
            <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="20"
                    Margin="0,0,0,16">
                <StackPanel>
                    <TextBlock Text="سفارش عکس و چاپ" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,12"/>
                    <ListView x:Name="PrintSizesListView" SelectionMode="None">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Grid Padding="8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="100"/>
                                        <ColumnDefinition Width="150"/>
                                    </Grid.ColumnDefinitions>
                                    <CheckBox Content="{Binding Size}" 
                                             IsChecked="{Binding IsSelected, Mode=TwoWay}"
                                             Checked="Print_CheckChanged"
                                             Unchecked="Print_CheckChanged"/>
                                    <NumberBox Value="{Binding Quantity, Mode=TwoWay}"
                                              Grid.Column="1"
                                              Minimum="0"
                                              Maximum="1000"
                                              SpinButtonPlacementMode="Inline"
                                              ValueChanged="PrintQuantity_Changed"
                                              Width="90"/>
                                    <TextBlock Text="{Binding TotalPriceFormatted}" 
                                              Grid.Column="2"
                                              Foreground="#2196F3"
                                              FontWeight="SemiBold"/>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </StackPanel>
            </Border>

            <!-- جمع کل -->
            <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="20"
                    Margin="0,0,0,16">
                
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- بیعانه + روش پرداخت -->
                    <StackPanel Grid.Row="0" Grid.Column="2">
                        <TextBlock Text="بیعانه" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,8"/>
                        <Border BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                BorderThickness="1"
                                CornerRadius="6"
                                Padding="12">
                            <StackPanel>
                                <RadioButton x:Name="CardRadio" Content="واریز به کارت" GroupName="Payment" IsChecked="True"/>
                                <RadioButton x:Name="PosRadio" Content="واریز با دستگاه پوز" GroupName="Payment"/>
                                <RadioButton x:Name="CashRadio" Content="واریز به صندوق" GroupName="Payment"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>

                    <!-- جمع + بیعانه -->
                    <StackPanel Grid.Row="0" Grid.Column="0">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <TextBlock Text="جمع خدمات: " FontSize="14"/>
                            <TextBlock x:Name="TotalServicesText" 
                                      Text="0 تومان" 
                                      FontSize="14" 
                                      FontWeight="SemiBold"
                                      Foreground="#2196F3"/>
                        </StackPanel>
                        <TextBlock Text="بیعانه دریافت شده" FontSize="14" Margin="0,8,0,4"/>
                        <TextBox x:Name="DepositBox" 
                                PlaceholderText="مبلغ (تومان)"
                                Height="40"
                                TextChanged="Deposit_TextChanged"/>
                    </StackPanel>

                    <!-- باقیمانده -->
                    <StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" Margin="0,16,0,0">
                        <TextBlock Text="باقیمانده قرارداد" FontSize="14" Margin="0,0,0,4"/>
                        <Border Background="#2196F3" CornerRadius="6" Padding="16" Height="60">
                            <TextBlock x:Name="RemainingText" 
                                      Text="0 تومان" 
                                      FontSize="24" 
                                      FontWeight="Bold"
                                      Foreground="White"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
                        </Border>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- دکمه ثبت -->
            <Button Content="✅ ثبت نهایی قرارداد"
                    Height="56"
                    FontSize="18"
                    FontWeight="SemiBold"
                    HorizontalAlignment="Stretch"
                    Click="Submit_Click"
                    Background="#2196F3"
                    Foreground="White"/>

        </StackPanel>
    </ScrollViewer>
</Page>
